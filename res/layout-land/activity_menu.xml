<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".MenuActivity" >

    <Button
        android:id="@+id/menuButton_TranslateTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menuTitle_title"
        android:onClick="TranslateToPressed"
        android:text="@string/menuButton_TranslateTo" />

    <Button
        android:id="@+id/menuButton_TranslateFrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menuButton_TranslateTo"
        android:onClick="TranslateFromPressed"
        android:text="@string/menuButton_TranslateFrom" />

    <Button
        android:id="@+id/menuButton_About"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menuButton_TranslateFrom"
        android:onClick="AboutPressed"
        android:text="@string/menuButton_About" />

    <Button
        android:id="@+id/menuButton_Quit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menuButton_About"
        android:onClick="QuitPressed"
        android:text="@string/menuButton_Quit" />

    <TextView
        android:id="@+id/menuTitle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="@string/app_name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold" />

</RelativeLayout>